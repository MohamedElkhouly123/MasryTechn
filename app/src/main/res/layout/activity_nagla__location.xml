<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#CC535252"
    tools:context=".view.choose_place.Nagla_Location">
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:elevation="@dimen/_10sdp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

    <LinearLayout
        android:id="@+id/constr"
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        android:orientation="horizontal">


    <ImageView
        android:id="@+id/list"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical|start"

        android:background="@drawable/ic_arrow_w_black_24dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    </LinearLayout>
    </androidx.appcompat.widget.Toolbar>
    <ImageView
        android:id="@+id/imageView"
        android:layout_width="@dimen/_165sdp"
        android:layout_height="@dimen/_150sdp"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:src="@drawable/logo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/toolbar" />

    <TextView
        android:id="@+id/txt_nglah_loc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginStart="8dp"
        android:fontFamily="@font/lemon"
        android:layout_marginTop="@dimen/_10sdp"
        android:text="@string/naglah_place"
        android:textColor="@color/mdtp_white"
        android:textSize="@dimen/_16ssp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/imageView" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/txt_nglah_loc"
        android:background="@drawable/shape"
        android:orientation="vertical"
        android:gravity="center"
        android:paddingBottom="@dimen/_80sdp"
        app:layout_constraintEnd_toEndOf="parent"

        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="@dimen/_50sdp">
        <Button
            android:id="@+id/outsideCity"
            android:layout_marginTop="@dimen/_30sdp"
            android:layout_width="@dimen/_165sdp"
            android:layout_height="@dimen/_50sdp"
            android:background="@drawable/bottonshape"
            android:layout_gravity="center_horizontal"
            android:textSize="@dimen/_16ssp"
            android:textColor="@color/black"
            android:text="@string/betweenCities"
            android:fontFamily="@font/lemon"/>
        <Button
            android:id="@+id/insideCity"
            android:layout_marginTop="@dimen/_25sdp"
            android:layout_width="@dimen/_165sdp"
            android:layout_height="@dimen/_50sdp"
            android:background="@drawable/bottonshape"
            android:layout_gravity="center_horizontal"
            android:textSize="@dimen/_16ssp"
            android:textColor="@color/black"
            android:text="@string/inside_City"
            android:fontFamily="@font/lemon"
            android:layout_marginBottom="@dimen/_60sdp"/>

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>