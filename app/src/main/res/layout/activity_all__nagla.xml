<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@android:color/white"

    tools:context=".view.All_Naglas.All_Nagla">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="#B30A0A0A"
        android:elevation="@dimen/_10sdp"
        >
        <LinearLayout
            android:id="@+id/constr"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            >


            <ImageView
                android:id="@+id/list"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical|start"

                android:background="@drawable/ic_arrow_w_black_24dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/search_edit_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginStart="@dimen/_20sdp"
                android:layout_marginEnd="@dimen/_20sdp"
                android:text="النقلات المطلوبه"
                android:textAlignment="center"
                android:textColor="#fff"
                android:fontFamily="@font/arabfont"
                android:textStyle="bold"
                android:textSize="@dimen/_14ssp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toEndOf="@+id/list"
                app:layout_constraintTop_toTopOf="parent" />


        </LinearLayout>
    </androidx.appcompat.widget.Toolbar>







    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:layout_marginTop="20dp">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#fff" />

        <TextView
            android:id="@+id/tv_empty_image"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:hint="فارغ"
            android:gravity="center"
            android:textSize="50sp"
            android:visibility="gone"/>

    </RelativeLayout>


</LinearLayout>