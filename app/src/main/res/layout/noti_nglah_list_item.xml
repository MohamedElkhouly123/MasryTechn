<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:elevation="5dp"
    app:cardCornerRadius="15dp"
    android:layout_marginBottom="3dp"
    android:layout_marginRight="5dp"
    android:layout_marginTop="3dp"
    android:layout_marginLeft="5dp"
    android:backgroundTint="#B30A0A0A">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="15dp"
        android:layout_marginBottom="15dp">

        <TextView
            android:id="@+id/tv_nglah_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nglah Name"
            android:textColor="#fff"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/tv_details"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Nglah Details"
            android:textColor="#fff"
            android:layout_below="@id/tv_nglah_name"
            android:paddingLeft="10dp"
            android:maxLines="2"/>

        <TextView
            android:id="@+id/tv_thing_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Thing Type"
            android:textColor="#fff"
            android:layout_toRightOf="@id/tv_nglah_name"
            android:layout_alignBottom="@id/tv_nglah_name"
            android:paddingLeft="10dp"
            android:paddingBottom="@dimen/_2ssp"
            android:gravity="center"/>

        <TextView
            android:id="@+id/tv_nglah_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:textColor="#fff"

            android:text="Inside"/>

    </RelativeLayout>

</androidx.cardview.widget.CardView>